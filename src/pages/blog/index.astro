---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/Container.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout title="Blog">
	<Container>
		<main class="py-24">
			<section>
				<div class="flex flex-wrap">
					{
						posts.map((post) => (
							<div class="xl:w-1/3 md:w-1/2 p-3 group">
								<a href={`/blog/${post.slug}/`}>
									<h4 class="title text-xl text-gray-600 group-hover:text-black group-hover:underline">{post.data.title}</h4>
									{post.data.description && <p class="description max-w-full text-sm text-gray-500 group-hover:text-gray-800 text-ellipsis overflow-hidden">{post.data.description}</p>
									<p class="date text-gray-400 group-hover:text-gray-700 text-xs">
										<FormattedDate date={post.data.publishDate} />
									</p>
								</a>
							</div>
						))
					}
				</div>
			</section>
		</main>
	</Container>
	</Layout>